on:
  push:
    branches: [ main ]

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Setup Hugo
      uses: peaceiris/actions-hugo@v2
      with:
        hugo-version: 'latest'
        extended: true

    - name: Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '18'

    - name: Install dependencies
      run: npm install

    - name: Build sites
      run: |
        hugo --config config/conventionalmortgagebrokers/hugo.toml --minify --destination "public/brokers"
        hugo --config config/conventionalmortgageloans/hugo.toml --minify --destination "public/loans"
        hugo --config config/helocloanofficers/hugo.toml --minify --destination "public/heloc"

    - name: Deploy via SSH
      uses: appleboy/ssh-action@v1.0.0
      with:
        host: ${{ secrets.SSH_HOST }}
        username: ${{ secrets.SSH_USERNAME }}
        key: ${{ secrets.SSH_PRIVATE_KEY }}
        script: |
          cd /path/to/your/site
          git pull origin main
          # Additional deployment commands