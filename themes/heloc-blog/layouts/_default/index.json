[
{{- $first := true -}}
{{- range .Site.RegularPages -}}
    {{- if eq .Section "blogs" -}}
        {{- if not $first -}},{{- end -}}
        {{- $first = false -}}
        {
            "title": {{ .Title | jsonify }},
            "date": {{ (.Date.Format "January 2, 2006") | jsonify }},
            "category": {{ .Params.category | jsonify }},
            "excerpt": {{ .Params.excerpt | jsonify }},
            "image": {{ .Params.image | jsonify }},
            "permalink": {{ .Permalink | jsonify }},
            "tags": {{ .Params.tags | jsonify }}
        }
    {{- end -}}
{{- end -}}
]
